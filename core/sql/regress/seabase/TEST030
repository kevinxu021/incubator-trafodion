--
-- Tests for Monarch/Ampool storage 
--

create schema test030_sch;
set schema test030_sch;

obey TEST030(clean_up);

log LOG030 clear;
obey TEST030(creates);
obey TEST030(inserts);
obey TEST030(selects);
obey TEST030(clean_up);
log;

?section clean_up
drop table test030t1;

?section creates
create table test030t1 (a int not null primary key, b int)
  attribute storage monarch;
invoke test030t1;

?section inserts
upsert into test030t1 values (1,2);

?section selects
explain options 'f' select * from test030t1 where a = 1;
select * from test030t1 where a = 1;
select * from test030t1 where a = 0;

