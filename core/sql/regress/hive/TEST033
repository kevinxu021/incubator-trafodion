obey $$REGRTSTDIR$$/TEST003(hadoop_setup);

log LOG033 clear;
set envvar ORC '_ORC';
obey TEST033(setup);
obey $$REGRTSTDIR$$/TEST003(tests1);

sh regrhadoop.ksh fs -ls  /user/hive/exttables/ins_store_sales_summary/* | grep ins_store_sales_summary | wc -l | tee -a LOG033;
log LOG033_orig_store_sales_summary.dat clear;
select ss_sold_date_sk,ss_store_sk, sum (ss_quantity)  from store_sales$$ORC$$ group by  ss_sold_date_sk ,ss_store_sk order by  ss_sold_date_sk,ss_store_sk; 
log;
log LOG033_ins_store_sales_summary.dat clear;
select  * from ins_store_sales_summary order by  ss_sold_date_sk,ss_store_sk; 
log;
sh diff -b LOG033_ORIG_STORE_SALES_SUMMARY.DAT LOG033_INS_STORE_SALES_SUMMARY.DAT 2>&1 >>LOG033;

log LOG033;
obey $$REGRTSTDIR$$/TEST003(tests2);
log;

log LOG033_orig_store_sales_summary.dat clear;
select ss_sold_date_sk,ss_store_sk, sum (ss_quantity)  from store_sales$$ORC$$ group by  ss_sold_date_sk ,ss_store_sk order by  ss_sold_date_sk,ss_store_sk; 
log;
log LOG033_ins_store_sales_summary.dat clear;
select  * from ins_store_sales_summary order by  ss_sold_date_sk,ss_store_sk; 
log;
sh diff -b LOG033_ORIG_STORE_SALES_SUMMARY.DAT LOG033_INS_STORE_SALES_SUMMARY.DAT 2>&1 >>LOG033;

obey $$REGRTSTDIR$$/TEST003(tests3);

log;
exit;


?section setup
set schema hive.hive;
cqd HIVE_MAX_STRING_LENGTH '20' ;
cqd mode_seahive 'ON';
cqd traf_enable_orc_format 'ON';
cqd HIST_ROWCOUNT_REQUIRING_STATS '50000';
cqd orc_pred_pushdown 'ON';
cqd orc_aggr_pushdown 'ON';
cqd orc_columns_pushdown 'ON';
