set envvar ORC '_ORC';
obey $$REGRTSTDIR$$/TEST001(clean_up);
log LOG031 clear;
set envvar ORC '_ORC';
obey TEST031(setup);
obey $$REGRTSTDIR$$/TEST001(setup);
obey $$REGRTSTDIR$$/TEST001(tests);
obey $$REGRTSTDIR$$/TEST001(clean_up);
log;
exit;


?section setup
set schema hive.hive;
cqd HIVE_MAX_STRING_LENGTH '20' ;
cqd mode_seahive 'ON';
cqd traf_enable_orc_format 'ON';
cqd HIST_ROWCOUNT_REQUIRING_STATS '50000';
cqd orc_pred_pushdown 'ON';
cqd orc_aggr_pushdown 'ON';
cqd orc_columns_pushdown 'ON';
