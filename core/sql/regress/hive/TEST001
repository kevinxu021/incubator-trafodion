log LOG001 clear;
obey TEST001(setup);
obey TEST001(tests);
log;
exit;

?section setup
--------------------------------------------------------------------------

set schema hive.hive;
cqd HIVE_MAX_STRING_LENGTH '20' ;
cqd mode_seahive 'ON';

?section tests
--------------------------------------------------------------------------

select count(*) from customer$$ORC$$ ;
select count(*) from customer_address$$ORC$$ ;
select count(*) from date_dim$$ORC$$ ;
select count(*) from household_demographics$$ORC$$ ;
select count(*) from item$$ORC$$ ;
select count(*) from promotion$$ORC$$ ;
select count(*) from store$$ORC$$ ;
select count(*) from time_dim$$ORC$$ ;

select count(*) from store_sales$$ORC$$ ;
select count(*) from customer_demographics$$ORC$$ ;

select c_customer_sk from customer$$ORC$$ where c_customer_sk < 100; 

select ca_gmt_offset from customer_address$$ORC$$ where ca_gmt_offset < -8 
order by ca_gmt_offset;

select [first 100] hd_buy_potential from household_demographics$$ORC$$ ;

select * from promotion$$ORC$$ ;

select t_time from time_dim$$ORC$$ where t_time > 100 and t_time < 200 ; 

select * from store$$ORC$$ ; 

select d_date from date_dim$$ORC$$ where d_date > cast('2099-01-01' as date);

select [first 10] i_item_desc from item$$ORC$$ order by 1 desc;

select * from promotion$$ORC$$ ; 

select [first 100] cd_dep_employed_count from customer_demographics$$ORC$$ order by 1;

select [first 100] ss_quantity from store_sales$$ORC$$ order by 1;

cqd DETAILED_STATISTICS 'ALL';
select count(C_CUSTOMER_SK) from hive.customer$$ORC$$;
select count(*) from table(statistics(NULL,NULL));
cqd DETAILED_STATISTICS 'RESET';

create schema if not exists trafodion.hivesch;
cqd hive_views 'ON';
create or replace view trafodion.hivesch.view_customer$$ORC$$ as
  select * from hive.hive.customer$$ORC$$;
invoke trafodion.hivesch.view_customer$$ORC$$;

