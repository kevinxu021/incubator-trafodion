sh sqlci -i "TEST036(create_tables)";
sh sqlci -i "TEST036(test_orc_hive_reader)";
sh sqlci -i "TEST036(test_orc_cpp_reader)";
exit;

?section create_tables
sh regrhive.ksh -v -f $REGRTSTDIR/TEST036.orc.sql;

?section test_orc_cpp_reader
sh rm OrcCpp.log;
CQD ORC_HDFS_STATS_LOG_FILE 'OrcCpp.log';
CQD ORC_READ_STRIPE_INFO 'ON';
CQD ORC_READ_NUM_ROWS 'ON';
CQD ORC_USE_CPP_READER 'ON';
log LOG036 clear;
prepare xx from select * from hive.hive.myorc2;
log;
sh cat OrcCpp.log >> LOG036;


?section test_orc_hive_reader
sh rm OrcHive.log;
CQD ORC_HDFS_STATS_LOG_FILE 'OrcHive.log';
CQD ORC_READ_STRIPE_INFO 'ON';
CQD ORC_READ_NUM_ROWS 'ON';
CQD ORC_USE_CPP_READER 'OFF';
log EXPECTED036 clear;
prepare xx from select * from hive.hive.myorc2;
log;
sh cat OrcHive.log >> EXPECTED036;



