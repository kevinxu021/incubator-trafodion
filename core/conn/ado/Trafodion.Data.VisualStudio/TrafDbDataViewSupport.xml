<?xml version="1.0" encoding="utf-8"?>
<VSDataViewSupport xmlns="http://tempuri.org/VSDataViewSupport.xsd">
  <DataViews>
    <DataView name="HP SeaQuest">
      <DisplayName>HP SeaQuest</DisplayName>
      <StaticConnectionNode>
        <InitialDisplayName>{Root.Server}</InitialDisplayName>
        <Children>
          <StaticNode nid="Catalogs">
            <DisplayName>Catalogs</DisplayName>
            <Children>
              <Selection type="Catalog">
                <SelectionNode nid="Catalog">
                  <Icon name="Table"/>
                  <Children>
                    <StaticNode nid="Schemas">
                      <DisplayName>Schemas</DisplayName>
                      <Children>
                        <Selection type="Schema" restrictions="{Catalog.Name}">
                          <SelectionNode nid="Schema">
                            <Icon name="Table"/>
                            <Children>
                              <StaticNode nid="Tables">
                                <DisplayName>Tables</DisplayName>
                                <Children>
                                  <Selection type="Table" restrictions="{Schema.Catalog},{Schema.Name}">
                                    <SelectionNode nid="Table">
                                      <Icon name="Table"/>
                                      <Children>
                                        <Selection type="Column" restrictions="{Table.Catalog},{Table.Schema},{Table.Name}">
                                          <SelectionNode>
                                            <Icon name="Column"/>
                                          </SelectionNode>
                                        </Selection>
                                      </Children>
                                    </SelectionNode>
                                  </Selection>
                                </Children>
                              </StaticNode>
                              <StaticNode nid="Views">
                                <DisplayName>Views</DisplayName>
                                <Children>
                                  <Selection type="View" restrictions="{Schema.Catalog},{Schema.Name}">
                                    <SelectionNode nid="View">
                                      <Icon name="Table"/>
                                      <Children>
                                        <Selection type="ViewColumn" restrictions="{View.Catalog},{View.Schema},{View.Name}">
                                          <SelectionNode>
                                            <Icon name="Column"/>
                                          </SelectionNode>
                                        </Selection>
                                      </Children>
                                    </SelectionNode>
                                  </Selection>
                                </Children>
                              </StaticNode>
                            </Children>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                  </Children>
                </SelectionNode>
              </Selection>
            </Children>
          </StaticNode>
        </Children>
      </StaticConnectionNode>
    </DataView>
  </DataViews> 
  <Resources baseName="HP.Data.VisualStudio.Properties.Resources" />
</VSDataViewSupport>
