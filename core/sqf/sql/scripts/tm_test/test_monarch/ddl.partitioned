create schema seabase;
set schema seabase;
drop table inventory;
drop table li1;
drop table li2;
drop table li3;

create table inventory
  (
    item_id      int unsigned no default not null
  , item_type int unsigned no default not null
  , item_count       int unsigned no default not null
  , primary key (item_id asc)
  )  
  salt using 8 partitions
  attributes storage monarch
  ;

create table li1 (a int no default not null, b int, primary key (a))
   salt using 8 partitions
   attributes storage monarch
;

create table li2 (a int no default not null, b int, primary key (a))
  salt using 8 partitions
  attributes storage monarch
;

create table li3 (a int no default not null, b int, primary key (a))
  salt using 8 partitions
  attributes storage monarch
;
