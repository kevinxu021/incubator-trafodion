TRAF_CONFIG=/etc/trafodion/trafodion_config
source $TRAF_CONFIG


function restartMgblty {

source $TRAF_CONFIG

$SQ_ROOT/sql/scripts/mgblty_stop

sleep 60

#No need to do this. CMON/NMON will auto-restart mgblty components
#$SQ_ROOT/sql/scripts/mgblty_start

}


#Main
echo "***INFO: Manageability Restart"
echo


restartMgblty

